package org.hk.java;
//대입 연산
public class Operation3 {

	public static void main(String[] args) {
		int a = 0;
		a +=8; // a = a+8
		System.out.println("a = "+a);
		a-=3;// a= a-3
		System.out.println("a = "+a);
		a*=5;// a = a*5
		System.out.println("a = "+a);
		a/=4; // a = a/4
		System.out.println("a = "+a);
		
	}

}
