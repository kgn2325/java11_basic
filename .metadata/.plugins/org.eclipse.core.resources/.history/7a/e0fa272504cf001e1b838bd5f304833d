package org.kh.java;

public class Hello2 {

	public static void main(String[] args) {
		int num=7;
		for(int i=0; i<num; i++){
			if(i<4) {
				for(int j=3; j>i; j--) {
					System.out.print(" ");
				}
				for(int k = 0; k<2*i+1;k++) {
					System.out.print("*");
				}
				System.out.println();
			}else{
				for(int j1=3; j1<i; j1++)
				{
					System.out.print(" ");
				}
				for(int k = 7; k>i;k++) {
					System.out.print("*");
				}
				System.out.println();
			}
			
		}
	}

}
